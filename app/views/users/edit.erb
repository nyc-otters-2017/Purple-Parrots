<h1>Update your profile</h1>
<h3>Public information</h3>
<div class="edit-profile-container">
<form class="edit-profile-form" action="/users/<%= @user.id %>" method="post">
  <input type="hidden" name="_method" value="put">
    <label for="username">Display name</label>
    <input type="text" name="username" value="<%= @user.username %>">
    <label for="location">Location (it won't save yet :p)</label>
    <input type="text" name="location" placeholder="Enter a location">
    <label for="title">Title (nor will this)</label>
    <input type="text" name="title" placeholder="No title has been set">
    <input type="submit" name="submit" value="Update">
  </form>
</form>

