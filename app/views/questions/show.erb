<div class="show-question">

  <h2><%= @question.title %></h2>
  <br>
  <h4><%= @question.question %></h4>

  <div class="comments">
    <% if current_user %>
    <form id="comment" method="post" action="/questions/<%= @question.id %>/comment">
      <label for="comment">Add a comment</label>
      <input type="text" name="comment">
      <input type="submit" value="post comment">
    </form>
    <% end %>
    <div class="comment-list">
      <article
        <br>
        <% @question_comments.each do |comment| %>
        <span><%= comment.comment %></span>
        <span>- <%= User.find(comment.user_id).username %></span>
        <span> on <%= pretty_time(comment.created_at)%></span>
        <br>
      <% end %>
    </div>
  </div>

  <br><br>

  <div class="answer-container">
    <p>
      <%= erb :'_answer' %>
    </p>
  </div>

  <br>
  <br><br><br>
</div>


  <form id="answer-form" method="post" action="/questions/<%= @question.id %>/answer">
    <p>We need your help! Kernel Panic depends on everyone sharing their knowledge, and that begins with you! If you're able to answer this question, please, grace us!</p>
    <br><br>
    <textarea name="answer" id="answer-input" class="answer-input" placeholder="Answer" rows="10" cols="70"></textarea>
    <br><br>
    <input type="submit" value="post answer">
    <br><br>
  </form>

  <div class="comments">
    <% if current_user %>
    <form id="comment" method="post" action="answers/<%= @question.id %>/comment">
      <label for="comment">Add a comment</label>
      <input type="text" name="comment">
      <input type="submit" value="post comment">
    </form>
    <% end %>
    <div class="comment-list">
      <article
        <br>
        <% @answer_comments.each do |comment| %>
        <span><%= comment.comment %></span>
        <span>- <%= User.find(comment.user_id).username %></span>
        <span> on <%= pretty_time(comment.created_at)%></span>
        <br>
      <% end %>
    </div>
  </div>

  <article class="edit-question-link">
    <a href="/questions/<%= @question.id %>/edit">Edit this question</a>
  <article>
